<div class="container">
  <%= form_for @task, :html => {class: "form-group"} do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :details %>
      <%= f.text_area :details, size: "30x4" %>
    </div>
    <%= f.submit %>
  <% end %>
  <%= link_to "Back to list", tasks_path %>
</div>
