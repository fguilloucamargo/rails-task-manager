<div class="container">
  <h1>My tasks</h1>
  <ul>

    <% @tasks.each do |task| %>
    <li>
      <%= task.completed ? "[X]" : "[ ]" %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "(Delete)",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?"} %>
    </li>
    <% end %>
    <li class="margin-top"><%= link_to "Add a new task", new_task_path %></li>
  </ul>
</div>
